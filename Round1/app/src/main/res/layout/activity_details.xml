<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/details_tv_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"/>

    <WebView
        android:id="@+id/details_web_view"
        android:layout_width="match_parent"
        android:layout_below="@+id/details_tv_name"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/details_tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:text="@string/error_unable_to_open_web_page"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/details_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>